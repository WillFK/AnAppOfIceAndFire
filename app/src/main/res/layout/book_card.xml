<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_marginBottom="30dp"
    android:paddingBottom="10dp">
    <TextView
        android:id="@+id/bookCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Some book"
        android:paddingTop="10dp"
        android:gravity="center"
        android:textAllCaps="true"
        />
    <TextView
        android:id="@+id/bookCardPages"
        android:layout_below="@id/bookCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="42 pages"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:textAllCaps="true"
        />
    <ImageView
        android:id="@+id/bookCardImage"
        android:layout_below="@id/bookCardPages"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:src="@drawable/clash_of_kings"
        />
</RelativeLayout>